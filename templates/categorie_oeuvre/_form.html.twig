{% extends 'baseBack.html.twig' %}
{% block body %} 
<body>



  <main id="main" class="main">
 {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
    {#{{ form_widget(form) }}#}
   
    <div class="pagetitle">
      <h1>Ajouter Ctaegorie </h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('app_oeuvre_index')}}">Home</a></li>
          <li class="breadcrumb-item">Categorie</li>
          <li class="breadcrumb-item active">Ajouter</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      
      
       <div style="display: flex;align-item: center;justify-content: center">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Ajouter categorie</h5>

              <!-- General Form Elements -->
            
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Nom</label>
                  <div class="col-sm-10">
                    
                    {{ form_widget(form.nomCatOeuv,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(form.nomCatOeuv,{'attr':{'class':'text-danger'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                  {{ form_widget(form.descriptionCatOeuv,{'attr':{'class':'form-control'}}) }}
                   {{ form_errors(form.descriptionCatOeuv,{'attr':{'class':'text-danger'}}) }}
                  
                  </div>
                </div>
              
                
              

                 {{ form_end(form) }}

              
                
                  <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                    
                     <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                 
                </div>


            </div>
          </div>

        </div>

      

    </section>

  </main><!-- End #main -->

  
{% endblock %}
